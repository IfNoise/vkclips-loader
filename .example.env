# Example .env file for vkclips-loader

# VK API token
VK_TOKEN="your_vk_token_here"

# Enable or disable wall posts
VK_WALLPOST=True

# VK group ID
VK_GROUP_ID=your_vk_group_id_here

# Description for VK posts
VK_DESCRIPTION="your_vk_description_here"

# Maximum number of videos to upload per day
MAX_VIDEOS_PER_DAY=30

# Telegram bot token
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"

# Directory for uploads
UPLOAD_DIR="/path/to/your/upload_dir"

# Directory for archived videos
ARCHIVE_DIR="/path/to/your/archive_dir"

# VK username
VK_USERNAME=your_vk_username_here

# VK password
VK_PASSWORD=your_vk_password_here

# VK client ID
VK_CLIENT_ID=your_vk_client_id_here

# VK client secret
VK_CLIENT_SECRET=your_vk_client_secret_here